pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        // Clean before build
        // cleanWs()
        // Build image
        sh 'docker build -t kubeflow/inference-cv-pytorch:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image kubeflow/inference-cv-pytorch:latest'
      }
    }
  }
}
